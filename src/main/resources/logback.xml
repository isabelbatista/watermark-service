<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %date{dd-MM-yyyy't'HH:mm:ss} %-5level %X{logRef} %logger{0}: %msg%n%ex
            </Pattern>
        </layout>
    </appender>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="isabelbatista.test.watermark" level="info"/>

</configuration>